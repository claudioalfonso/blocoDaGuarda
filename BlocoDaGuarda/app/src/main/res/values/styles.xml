<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="buttonStyle">@style/MyButton</item>
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/bdg_white</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>


    <declare-styleable name="SpinnerCountdown">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <style name="SpinnerCountdown">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="circleColor">@color/default_circle_color</item>
        <item name="progressColor">@color/default_progress_color</item>
    </style>

    <style name="primaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bdg_textSize_small</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="login_top_text" parent="primaryText">
        <item name="android:textColor">@color/bdg_white</item>
    </style>

    <style name="login_bottom_text" parent="primaryText">
        <item name="android:textColor">@color/bdg_black</item>
    </style>


    <style name="about_text" parent="primaryText">
        <item name="android:textSize">@dimen/bdg_textSize_medium</item>
        <item name="android:textColor">@color/bdg_black</item>
    </style>

    <style name="login_button" parent="MyButton">
        <item name="android:textSize">@dimen/bdg_textSize_medium</item>
    </style>

    <style name="bdg_network_button" parent="MyButton">
        <item name="android:textSize">@dimen/bdg_textSize_medium</item>
        <item name="android:textColor">@color/bdg_white</item>
        <item name="android:background">@drawable/bdg_network_rounded_button</item>

    </style>

    <style name="contact_text" parent="primaryText">
    <item name="android:textColor">@color/bdg_white</item>
    <item name="android:textSize">@dimen/bdg_textSize_medium</item>
    </style>

    <style name="menu_text">
        <item name="android:textSize">@dimen/bdg_textSize_large</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>

    </style>

</resources>
